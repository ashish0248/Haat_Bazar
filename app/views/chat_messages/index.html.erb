<div class="body">
    <div class="container">
       <div class="row">
	       		<div>
	       			<h2>チャットルーム一覧</h2>
	       			<table  class="table table-striped">
	       				<thead>
		       				<tr>
		       					<th></th>
		       					<th>名前</th>
		       					<th>メールアドレス</th>
		       					<th>住所</th>
		       					<th></th>
		       					<th>タグ</th>
		       				</tr>
	       				</thead>
						<%  @users.each do |user| %>
							<tr>
								<td>
									<%= link_to user_path(user.id), data: {"turbolinks" => false} do %>
					       				<%= attachment_image_tag(user, :profile_image, :fill, 100, 100 ) %>
					       			<% end %>
	       						</td>
	       						<td><%= user.name %></td>
	       						<td><%= user.email %></td>
	       						<td><%= user.address %></td>
	       						<td><%= link_to "チャットルームへ",chat_message_path(user.id),class: "btn btn-info", style:"text-decoration: none;" %></td>
	       						<td><%= render 'users/tag_list', tag_list: user.tag_list %></td>
							</tr>
						<% end %>
					</table>
	       		</div>
	       		
      </div>
    </div>
</div>      
