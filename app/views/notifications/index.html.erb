<div class="body">
    <div class="container">
       <div class="row">
       		<div class="col-xs-3">
			</div>
       		<div class="col-xs-6">
				<h3 class="text-center" style="margin: 30px">通知</h3>
				    <%= link_to "通知の削除", notification_path(@notifications), method: :delete, style:"text-decoration: none; color: white; margin: 30px;" , class: "btn btn-danger" %>
				<% if @notifications.exists? %>
				    <div class="notification-index">
				        <%= render @notifications %>
				    </div>
				<% else %>
				    <p>通知はありません</p>
				<% end %>
			</div>
       </div>
    </div>
</div>