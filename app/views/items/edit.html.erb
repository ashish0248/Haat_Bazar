<div class="body">
    <div class="container">
       <div class="row">
       		<%= form_for(@item, url: item_path(@item.id)) do |f| %>
				<%= f.hidden_field :document_id %>
				<%= f.label :商品名 %>
				<%= f.text_field :name %><br>
				<%= f.label :数量 %>
				<%= f.text_field :number %><br>
				<%= f.label :単位 %>
				<%= f.text_field :unit %><br>
				<%= f.label :単価 %>
				<%= f.text_field :price %><br>
				<%= f.submit '変更する' %>
			<% end %>
      </div>
    </div>
</div>