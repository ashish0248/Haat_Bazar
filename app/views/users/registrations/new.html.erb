<div class="body">
    <div class="container">
       <div class="row">
        <div class="col-xs-3">
        </div>
        <div class="col-xs-6">
          <% if @user.user_maker == true %>
            <h2>作り手　新規登路ページ</h2>
          <% else %>
            <h2>お店　新規登路ページ</h2>
          <% end %>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div>
                <%= f.attachment_field :profile_image,id: :post_img %>
                        画像選択
            </div>

            <div class="field">
                <% if  @user.user_maker == true %>
                  <%= f.label :屋号 %>
                <% else %>
                  <%= f.label :店舗名 %>
                <% end %>
                <%= f.text_field :name, autofocus: true %>
            </div>

            <div class="field">
                <% if  @user.user_maker == true %>
                  <%= f.label :作り手名 %>
                <% else %>
                  <%= f.label :担当者名 %>
                <% end %>
                <%= f.text_field :staff, autofocus: true %>
            </div>

            <div class="field">
                <% if  @user.user_maker == true %>
                  <%= f.label :作り手の紹介 %>
                <% else %>
                  <%= f.label :お店の紹介 %>
                <% end %>
                <%= f.text_area :introduction, autofocus: true %>
            </div>

            <div>
                <%= f.label :タグ（複数可能） %>
                <%= f.text_field :tag_list, value: resource.tag_list.join(',') %>
            </div>

            <div class="field">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
                <%= f.label :郵便番号（ハイフンなし） %>
                <%= f.text_field :postal_code, autofocus: true, class: "postal_code", id: "address_zipcode" %>
            </div>
             
            <div class="field">
                <%= f.label :住所 %>
                <%= f.text_field :address, autofocus: true, :size => "50", class: "address", id:"address_name" %>
             </div>

            <div class="field">
                <%= f.label :電話番号（ハイフンなし） %>
                <%= f.text_field :phone_number, autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
</div>
