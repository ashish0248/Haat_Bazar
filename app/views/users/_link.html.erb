<% if user.homepage.present? %>
	<%= link_to user.homepage, style:"text-decoration: none; color: black" do %>
		<%= image_tag asset_path("homepage_image.png"), :size =>'20x20' %>
	<% end %>
<% end %>

<% if user.instagram.present? %>
	<%= link_to user.instagram, style:"text-decoration: none; color: black" do %>
    	<%= image_tag asset_path("instagram_image.jpeg"), :size =>'20x20' %>
	<% end %>
<% end %>

<% if user.facebook.present? %>
	<%= link_to user.facebook, style:"text-decoration: none; color: black" do %>
		<%= image_tag asset_path("facebook_image.jpg"), :size =>'20x20' %>
	<% end %>
<% end %>