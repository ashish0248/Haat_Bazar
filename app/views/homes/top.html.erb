<div class="body">
    <div class="container">

    	<div style="margin: 300px;, background-color: black">
    		<h2>Haat Bazar</h2>
    	</div>

    	<div class="row">
	    	<div class="clearfix">

	    		<h3>おすすめの作り手</h3>
	    		<!-- 新着4人のみ載せる -->
	    		<% count = 0 %>
		    	<% @user_makers.each do |user_maker| %>
		    		<% if count < 4 %>
						<div>
							<div class="recommend_user">
								<%= link_to user_path(user_maker.id), data: {"turbolinks" => false} do %>
					            <%= attachment_image_tag(user_maker, :profile_image, :fill, 250, 250 ) %>
					        <% end %>
					        <h4 style="text-align:center"><%= user_maker.name %></h4>
							</div>
					    </div>
					    <% count = count + 1 %>
				    <% end %>
				<% end %>
	    	</div>
	    	<div  class="clearfix">
	    		<h3>おすすめのお店</h3>
	    		<!-- 4人のみ載せる -->
	    		<% count = 0 %>
		    	<% @user_shops.each do |user_shop| %>
		    		<% if count < 4 %>
						<div>
							<div class="recommend_user">
								<%= link_to user_path(user_shop.id), data: {"turbolinks" => false} do %>
					            <%= attachment_image_tag(user_shop, :profile_image, :fill, 250, 250 ) %>
					        <% end %>
					        <h4 style="text-align:center"><%= user_shop.name %></h4>
							</div>
					    </div>
					    <% count = count + 1 %>
				    <% end %>
				<% end %>
	    	</div>
      	</div>


		<div class="body">
		    <div class="container">
		       <div class="row">
		       	
		        <div id="user_new"class="registration-image" style="margin-top: 150px;" >
		          <!-- 作り手側 -->
		           	<div class="col-xs-6">
		           		<!-- そのまま新規登録画面へ -->
		              <div class="registration-maker">
		                <%= link_to "作り手として新規登録する", new_user_registration_path, style:"text-decoration: none; color: white", data: {"turbolinks" => false} %>
		                <p>・より多くのお店との出会えます<br>・制作の依頼が来るかも</p>
		              </div>
		           	</div>
		           	<!-- お店側 -->
		           	<div class="col-xs-6"> 
		           		<!-- user_makerをfalseにする -->
		              <div class="registration-shop">
		                <p>・多数の作り手との出会えます <br> ・お店オリジナルの商品を依頼できます</p> 
		              <%= link_to "お店を新規登録する", new_user_registration_path(user_maker: 'false'), style:"text-decoration: none; color: black", data: {"turbolinks" => false}  %>
		              </div>
		           	</div>

		        </div>

		       </div>
		    </div>
		</div>

    </div>
</div>